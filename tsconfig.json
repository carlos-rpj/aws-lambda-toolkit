{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@package.json": [
        "./package.json"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@implementations/*": [
        "./src/implementations/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ]
    }
  }
}